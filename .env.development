# .env.development
# Entwicklungsumgebung für lokales Testing

# ============================================================================
# BACKEND API URL (FastAPI Backend)
# ============================================================================
# Lokale Entwicklung (Backend läuft auf Port 8000)
REACT_APP_API_URL=http://localhost:8000

# Alternative: Falls Backend auf anderem Port läuft
# REACT_APP_API_URL=http://localhost:5000

# Produktion (Render.com Backend)
# REACT_APP_API_URL=https://render-social-media-max-backend.onrender.com

# ============================================================================
# WEBSOCKET KONFIGURATION (DEAKTIVIERT)
# ============================================================================
# WebSocket wird für Wallet Analyses NICHT benötigt
# Falls benötigt, auskommentieren und Backend-URL anpassen

# Lokale Entwicklung:
# REACT_APP_WS_URL=ws://localhost:8000/ws

# Produktion:
# REACT_APP_WS_URL=wss://render-social-media-max-backend.onrender.com/ws

# ============================================================================
# SOCKET.IO KONFIGURATION (DEAKTIVIERT)
# ============================================================================
# Socket.IO wird für Wallet Analyses NICHT benötigt
# socket.js wurde auf Dummy umgestellt

# Falls Socket.IO wieder benötigt wird:
# REACT_APP_SOCKET_URL=http://localhost:8000

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# Port für React Development Server
PORT=3000

# Browser automatisch öffnen
BROWSER=none

# ============================================================================
# DEBUG / LOGGING
# ============================================================================
# React App Debug-Modus
REACT_APP_DEBUG=true

# API Request Logging
REACT_APP_LOG_API_REQUESTS=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# WebSocket Features deaktiviert
REACT_APP_ENABLE_WEBSOCKET=false

# Wallet Analysis aktiviert
REACT_APP_ENABLE_WALLET_ANALYSIS=true

# Contract Radar aktiviert
REACT_APP_ENABLE_CONTRACT_RADAR=true

# ============================================================================
# WICHTIGE HINWEISE
# ============================================================================
# 1. Datei muss genau ".env.development" heißen (mit Punkt am Anfang)
# 2. Liegt im Root-Verzeichnis des React-Projekts (neben package.json)
# 3. Nach Änderungen MUSS React Dev Server neu gestartet werden: npm start
# 4. Alle Variablen MÜSSEN mit REACT_APP_ beginnen
# 5. Keine Anführungszeichen um URLs
# 6. Backend muss laufen bevor Frontend gestartet wird

# ============================================================================
# SCHNELLTEST
# ============================================================================
# Backend Health Check:
# curl http://localhost:8000/api/v1/wallet/health
#
# Browser Console Test:
# console.log('API URL:', process.env.REACT_APP_API_URL);
# fetch(process.env.REACT_APP_API_URL + '/api/v1/wallet/health')
#   .then(r => r.json())
#   .then(d => console.log('✅ Backend:', d));
REACT_APP_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
REACT_APP_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
REACT_APP_SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
